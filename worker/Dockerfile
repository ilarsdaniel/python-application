FROM --platform=linux/amd64 mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /source
COPY *.csproj .  
RUN dotnet restore  # ✅ Corrected

COPY . .  
RUN dotnet publish -c release -o /app --self-contained false --no-restore  # ✅ Corrected

FROM mcr.microsoft.com/dotnet/runtime:7.0  
WORKDIR /app  
COPY --from=build /app .  
ENTRYPOINT ["dotnet", "Worker.dll"]
